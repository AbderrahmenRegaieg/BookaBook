@model WebAppcore.Models.Register

@{
    ViewData["Title"] = "Register";
}

<!-- Custom CSS for Modern Blue/White Design -->
<style>
    :root {
        --primary-blue: #1a73e8;
        --dark-blue: #0d47a1;
        --light-blue: #e8f0fe;
        --accent-blue: #4285f4;
        --white: #ffffff;
        --gray-light: #f5f7fa;
        --gray-medium: #dadce0;
        --gray-dark: #5f6368;
    }

    .register-container {
        padding: 20px;
        background: linear-gradient(135deg, var(--light-blue) 0%, var(--white) 100%);
        min-height: 100vh;
        font-family: 'Google Sans', 'Segoe UI', Roboto, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .register-container::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(66,133,244,0.1) 0%, rgba(255,255,255,0) 70%);
        z-index: 0;
        animation: float 8s infinite ease-in-out;
    }

   

    .card-register {
        max-width: 450px;
        width: 100%;
        border: none;
        border-radius: 12px;
        overflow: hidden;
        background-color: var(--white);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        z-index: 1;
    }

    .card-register:hover {
        box-shadow: 0 14px 28px rgba(0, 0, 0, 0.12);
        transform: translateY(-2px);
    }

    .card-header {
        background: linear-gradient(90deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
        color: white;
        font-weight: 500;
        text-align: center;
        padding: 25px;
        position: relative;
    }

    .card-header h2 {
        margin: 0;
        font-size: 1.8rem;
        letter-spacing: 0.5px;
    }

    .card-header::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, rgba(255,255,255,0.5) 0%, rgba(255,255,255,0) 100%);
    }

    .card-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-group label {
        font-weight: 500;
        color: var(--gray-dark);
        display: block;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid var(--gray-medium);
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s;
        background-color: var(--white);
    }

    .form-control:focus {
        border-color: var(--primary-blue);
        box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.2);
        outline: none;
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: var(--gray-medium);
    }

    .input-icon input {
        padding-left: 45px;
    }

    .btn-custom {
        background: linear-gradient(to right, var(--primary-blue), var(--accent-blue));
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 1rem;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.3s;
        width: 100%;
        box-shadow: 0 2px 6px rgba(26, 115, 232, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-custom:hover {
        background: linear-gradient(to right, var(--dark-blue), var(--primary-blue));
        box-shadow: 0 4px 12px rgba(26, 115, 232, 0.4);
        transform: translateY(-1px);
    }

    .btn-custom:active {
        transform: translateY(0);
    }

    .btn-custom::after {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: 0.5s;
    }

    .btn-custom:hover::after {
        left: 100%;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 0.85rem;
    }

    .alert {
        border-radius: 8px;
        padding: 12px 15px;
        margin-bottom: 20px;
    }

    .password-strength {
        margin-top: 5px;
        height: 4px;
        background-color: var(--gray-medium);
        border-radius: 2px;
        overflow: hidden;
    }

    .password-strength-bar {
        height: 100%;
        width: 0;
        transition: width 0.3s, background-color 0.3s;
    }

    .footer-links {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
    }

    .footer-links a {
        color: var(--primary-blue);
        text-decoration: none;
        margin: 0 10px;
        transition: color 0.3s;
    }

    .footer-links a:hover {
        color: var(--dark-blue);
        text-decoration: underline;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 0;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(66, 133, 244, 0.1);
        animation: float 15s infinite linear;
    }

    .shape:nth-child(1) {
        width: 100px;
        height: 100px;
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape:nth-child(2) {
        width: 150px;
        height: 150px;
        top: 60%;
        left: 80%;
        animation-delay: 2s;
        animation-duration: 20s;
    }

    .shape:nth-child(3) {
        width: 70px;
        height: 70px;
        top: 80%;
        left: 20%;
        animation-delay: 4s;
        animation-duration: 12s;
    }
</style>

<div class="register-container">
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    
    <div class="card card-register">
        <div class="card-header">
            <h2>Create Account</h2>
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Name">Full Name</label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateNaissance">Date of Birth</label>
                    <div class="input-icon">
                        <i class="fas fa-calendar-alt"></i>
                        <input asp-for="DateNaissance" class="form-control" type="date" />
                    </div>
                    <span asp-validation-for="DateNaissance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <div class="input-icon">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" id="password" />
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="password-strength-bar"></div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-custom mb-3">
                    <i class="fas fa-user-plus me-2"></i> Create Account
                </button>

                <div class="footer-links">
                    <p class="mb-0" style="color: var(--gray-dark);">
                        Already have an account?
                        <a href="@Url.Action("Login", "User")" class="text-primary">Sign in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    
    <script>
        // Password strength indicator
        document.getElementById('password').addEventListener('input', function() {
            const password = this.value;
            const strengthBar = document.getElementById('password-strength-bar');
            let strength = 0;
            
            if (password.length > 0) strength += 1;
            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;
            
            const width = strength * 20;
            let color = '#ff4444'; // red
            
            if (strength >= 4) {
                color = '#00C851'; // green
            } else if (strength >= 2) {
                color = '#ffbb33'; // yellow
            }
            
            strengthBar.style.width = width + '%';
            strengthBar.style.backgroundColor = color;
        });
    </script>
}